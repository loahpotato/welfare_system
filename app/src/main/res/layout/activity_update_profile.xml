<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UpdateProfileActivity"
    tools:ignore="ExtraText"
    android:id="@+id/profile_view"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <com.example.welfarehomesmanagementsystem.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_update_profile"/>
    <EditText
        android:id="@+id/update_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_update_profile"
        android:hint="Age"
        android:layout_marginTop="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"/>
    <EditText
        android:id="@+id/update_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone"
        android:layout_marginTop="15dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_below="@+id/update_age" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_below="@+id/update_phone"/>

</RelativeLayout>