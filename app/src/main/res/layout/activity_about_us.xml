<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AboutUsActivity">
    <com.example.welfarehomesmanagementsystem.widget.TitleLayout
        android:id="@+id/aboutus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="320dp"
        android:layout_height="260dp"
        android:layout_below="@+id/aboutus_title"
        android:layout_marginTop="400dp"
        android:layout_marginStart="120dp"
        android:src="@mipmap/about"/>
    <ScrollView
        android:layout_below="@+id/aboutus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="230dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@mipmap/logo"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/outline_rectangle">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginStart="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/company" />

            <TextView
                style="@style/home_button_text_style"
                android:layout_marginStart="15dp"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:layout_width="80dp"
                android:text="Company" />
        </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arimama"
                android:textSize="20sp"
                android:layout_marginStart="70dp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:background="@drawable/outline_rectangle">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginStart="30dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/phonecall" />

                <TextView
                    style="@style/home_button_text_style"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="start"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:text="Contact" />
            </LinearLayout>

            <TextView
                android:id="@+id/contactnum"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:text="+86 123467"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:background="@drawable/outline_rectangle">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginStart="30dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/address" />

                <TextView
                    style="@style/home_button_text_style"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="start"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:text="Address" />
            </LinearLayout>

            <TextView
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Room ABC, Jiliguala Building, Fuzhou, Guangdong Province, China"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="180dp"
            android:orientation="horizontal"
            android:background="@drawable/outline_rectangle">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginStart="30dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/corevalues" />

                <TextView
                    style="@style/home_button_text_style"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="start"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:text="Core values" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:justificationMode="none"
                android:text="Customers first, employees second, shareholders third.\n\nSimple because of trust.\n\nThe best performance today is the lowest standard tomorrow."
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>