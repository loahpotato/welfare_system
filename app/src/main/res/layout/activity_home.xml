<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home"
    tools:context=".HomeActivity">

    <include layout="@layout/title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="fill_horizontal"
            android:scaleType="fitXY"

            android:src="@mipmap/bg_2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:background="@drawable/home_outline_rectangle"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-light"
                android:text="Services"/>
            <View
                android:layout_width="285dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/gray"/>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="330dp"
                android:layout_height="210dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:padding="5dp"
                app:rowCount="2"
                app:columnCount="4">

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1">

                    <ImageButton
                        android:id="@+id/home_ambulance"
                        style="@style/home_button_style"
                        android:src="@mipmap/ic_ambulance" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:layout_marginTop="5dp"
                        android:text="Ambulance" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1">

                    <ImageButton
                        android:id="@+id/home_health_check"
                        style="@style/home_button_style"
                        android:src="@mipmap/ic_health_check" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:text="Health\nCheck" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1">

                    <ImageButton
                        android:id="@+id/home_kid"
                        style="@style/home_button_style"
                        android:src="@mipmap/ic_chilren" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:text="Children\nFoster" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1">

                    <ImageButton
                        android:id="@+id/home_old"
                        style="@style/home_button_style"
                        android:src="@mipmap/ic_old" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:text="Elderly\nCare" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1">

                    <ImageButton
                        android:id="@+id/home_info"
                        style="@style/home_button_style"
                        android:src="@mipmap/ic_donation" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:text="Donation\nRecord" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1">

                    <ImageButton
                        android:id="@+id/home_visit_record"
                        style="@style/home_button_style"
                        android:src="@mipmap/ic_door" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:text="Visitation\nRecords" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1">

                    <ImageButton
                        android:id="@+id/home_out_record"
                        style="@style/home_button_style"
                        android:src="@drawable/ic_twotone_how_to_reg_24" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:text="Residents\nRegistration" />
                </LinearLayout>

                <LinearLayout
                    style="@style/home_layout_style"
                    app:layout_rowWeight="1"
                    app:layout_columnWeight="1">

                    <ImageButton
                        android:id="@+id/home_homeless_care"
                        style="@style/home_button_style"
                        android:src="@drawable/ic_twotone_homeless" />

                    <TextView
                        style="@style/home_button_text_style"
                        android:text="Homeless Care" />
                </LinearLayout>

            </androidx.gridlayout.widget.GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="COVID-19 Tips"
                android:textSize="18sp"/>
            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/gray"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:src="@mipmap/covid_prevention"/>
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>



</LinearLayout>