<?xml version="1.0" encoding="utf-8"?>
<resources >
    <style name="home_layout_style">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_margin">2dp</item>
    <item name="android:padding">2dp</item>
    <item name="android:orientation">vertical</item>
    </style>

    <style name="home_button_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxWidth">70dp</item>
    </style>

    <style name="home_button_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/home_button_bg</item>
    </style>

    <style name="setting_layout_style">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/outline_rectangle</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="setting_page_text">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#3C3C3C</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>