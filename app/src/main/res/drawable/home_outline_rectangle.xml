<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:top="2dp"
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#F3F3F3" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:left="4dp"
        android:top="4dp"
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle" >
            <solid android:color="#E1E1E1" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:left="5dp"
        android:top="5dp"
        android:bottom="5dp"
        android:right="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="#C5C5C5" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:left="7dp"
        android:top="7dp"
        android:bottom="7dp"
        android:right="7dp">
        <shape android:shape="rectangle" >
            <solid android:color="#B5B5B5" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:left="8dp"
        android:top="8dp"
        android:bottom="8dp"
        android:right="8dp">
        <shape android:shape="rectangle" >
            <!-- 填充颜色 -->
            <solid android:color="@android:color/white" />
            <stroke android:color="#A1A1A1"
                android:width="1dp" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>